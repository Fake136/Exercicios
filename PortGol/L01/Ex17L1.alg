algoritmo "semnome"
// 17) Solicite o nome e idade de 4 pessoas e apresente a média no final
var
X,Idade:inteiro
Nome:caracter
Media:real

inicio
x<-0
Media<-0
Repita

   escreva("Digite o nome:")
   leia (Nome)
   escreva("Digite sua idade")
   leia (Idade)
   Media <- (Media + Idade)
   X<- X+1 M
ate X=4
Media <- (Media/4)
escreva("A media das idades das 4 pessoas são:",Media)

fimalgoritmo
